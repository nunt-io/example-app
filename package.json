{
  "name": "template",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "serve": "ng serve --live-reload",
    "start": "concurrently --kill-others \"npm run tailwind\" \"npm run serve\"",
    "start:prod": "tailwindcss build -i ./src/styles.scss -o ./src/styles.css -c tailwind.config.js && ng serve --disableHostCheck --prod",
    "build": "tailwindcss build -i ./src/styles.scss -o ./src/styles.css -c tailwind.config.js && ng build --prod --aot",
    "build:lib": "ng-packagr -p ng-package.json && cd dist && npm publish --registry https://nunt.io/registry",
    "tailwind": "tailwindcss build -i ./src/styles.scss -o ./src/styles.css -c tailwind.config.js --watch",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "~13.1.0",
    "@angular/common": "~13.1.0",
    "@angular/compiler": "~13.1.0",
    "@angular/core": "~13.1.0",
    "@angular/forms": "~13.1.0",
    "@angular/platform-browser": "~13.1.0",
    "@angular/platform-browser-dynamic": "~13.1.0",
    "@angular/router": "~13.1.0",
    "@ngx-translate/core": "~14.0.0",
    "@ngx-translate/http-loader": "~7.0.0",
    "@nunt/core": "^0.0.1",
    "@nunt/design": "^0.0.1",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.1.1",
    "@angular/cli": "~13.1.1",
    "@angular/compiler-cli": "~13.1.0",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "autoprefixer": "^10.0.2",
    "codelyzer": "^6.0.0",
    "concurrently": "^6.5.1",
    "jasmine-core": "~3.10.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "protractor": "~7.0.0",
    "tailwindcss": "~3.0.2",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.0",
    "@tailwindcss/typography": "^0.5.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.5.2"
  }
}
